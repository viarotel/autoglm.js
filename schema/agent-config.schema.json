{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AgentConfig",
  "description": "Configuration schema for the Agent",
  "type": "object",
  "properties": {
    "maxSteps": {
      "type": "integer",
      "description": "Maximum number of steps the agent can take",
      "minimum": 1,
      "default": 100
    },
    "lang": {
      "type": "string",
      "enum": ["cn", "en"],
      "description": "Language setting for the agent",
      "default": "cn"
    },
    "deviceId": {
      "type": "string",
      "description": "Optional device identifier"
    },
    "systemPrompt": {
      "type": "string",
      "description": "Optional system prompt for the agent"
    },
    "baseUrl": {
      "type": "string",
      "description": "Base URL for the API"
    },
    "apiKey": {
      "type": "string",
      "description": "API key for authentication"
    },
    "model": {
      "type": "string",
      "description": "Name of the model to use"
    },
    "maxTokens": {
      "type": "integer",
      "description": "Maximum number of tokens",
      "minimum": 1
    },
    "temperature": {
      "type": "number",
      "description": "Temperature parameter for model generation",
      "minimum": 0,
      "maximum": 2
    },
    "topP": {
      "type": "number",
      "description": "Top-p parameter for model generation",
      "minimum": 0,
      "maximum": 1
    },
    "frequencyPenalty": {
      "type": "number",
      "description": "Frequency penalty parameter",
      "minimum": -2,
      "maximum": 2
    }
  },
  "required": [
    "lang",
    "baseUrl",
    "model"
  ],
  "additionalProperties": false
}
