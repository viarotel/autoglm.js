{
  "name": "@autoglm/workspace",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.25.0",
  "description": "AutoGLM.js workspace",
  "author": "FliPPeDround <flippedround@qq.com>",
  "license": "MIT",
  "funding": "https://afdian.com/a/flippedround",
  "homepage": "https://github.com/FliPPeDround/autoglm.js#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/FliPPeDround/autoglm.js"
  },
  "bugs": "https://github.com/FliPPeDround/autoglm.js/issues",
  "keywords": [
    "autoglm",
    "open-autoglm",
    "agent",
    "ai"
  ],
  "scripts": {
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "dev": "turbo dev",
    "test": "turbo test",
    "dev:core": "turbo dev --filter=./core",
    "build:core": "turbo build --filter=./core",
    "dev:desktop": "turbo dev --filter=./desktop",
    "build:desktop": "turbo build --filter=./desktop",
    "prepublishOnly": "turbo build",
    "release:core": "cd core && pnpm release",
    "release:adb_w": "cd assets/platform-tools-windows && pnpm release",
    "release:adb_l": "cd assets/platform-tools-linux && pnpm release",
    "release:adb_d": "cd assets/platform-tools-darwin && pnpm release",
    "typecheck": "turbo typecheck",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.6.1",
    "@antfu/utils": "^9.3.0",
    "@types/node": "^25.0.1",
    "@unocss/eslint-plugin": "^66.2.0",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.0.1",
    "lint-staged": "^16.2.7",
    "publint": "^0.3.16",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.17.3",
    "turbo": "^2.7.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "vitest-package-exports": "^0.1.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
